<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.umaru.miyukisyllabus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.umaru.miyukisyllabus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="org.umaru.miyukisyllabus.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.SyllabusActivity"
            android:label="@string/title_activity_syllabus" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.ImportActivity"
            android:label="@string/title_activity_import" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.GradePrepareActivity"
            android:label="@string/title_activity_grade_prepare" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.GradeActivity"
            android:label="@string/title_activity_grade" >
        </activity>
        <activity
            android:name="org.umaru.miyukisyllabus.WebBrowserActivity"
            android:label="@string/title_activity_web_browser" >
        </activity>
    </application>

</manifest>